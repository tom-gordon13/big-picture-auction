{
  "buildCommand": "cd ui && npm install && npm run build",
  "outputDirectory": "ui/build",
  "installCommand": "cd backend && npm install --include=dev && npx prisma generate && npm run build",
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    },
    "api/cron/update-movies.js": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/update-movies",
      "schedule": "0 6 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    }
  ]
}
